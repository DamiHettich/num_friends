<div class="container">
  <br>
  <div class="d-flex-grow w-75 justify-content-center">
      <div class="card">
        <div class="card-header">
           <h1>Entrar</h1>
        </div>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <% f.label :email %>
            Ingrese su email:<br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"ejemplo@mail.com" %><br />
          </div>

          <div class="field">
            <% f.label :password %>Contraseña:
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :"Mantener sesión iniciada" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Entrar", class:'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <%= render "devise/shared/links" %>
</div>
