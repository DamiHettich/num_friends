<%= form_with(model: num2) do |form| %>
  <% if num2.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(num2.errors.count, "error") %> prohibited this num2 from being saved:</h2>

      <ul>
        <% num2.errors.each do |error| %>
          <li><%= error.full_message class:"alert alert-info"%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    Nombre: 
    <div class="col">
      <%= form.text_field :person_name, class:"form-control", placeholder:"Ingrese su nombre completo" %>
