  </div>

  <div class="field form-group row">
    Rut:
    <div class="col">
      <%= form.text_field :rut, class:"form-control", placeholder:"12345678-9" %>
    </div>
  </div>

  <div class="field form-group row">
    Banco:
    <div class="col">
      <%= form.text_field :bank, class:"form-control", placeholder:"Seleccione su banco" %>
    </div>
  </div>

  <div class="field form-group row">
    Tipo Cuenta:
    <div class="col">
      <%= form.text_field :acc_type, class:"form-control", placeholder:"Seleccione su tipo de cuenta" %>
    </div>
  </div>

  <div class="field form-group row">
    Nr. Cuenta:
    <div class="col">
      <%= form.text_field :acc_number, class:"form-control", placeholder:"Ingrese su nÃºmero de cuenta" %>
    </div>
  </div>

  <div class="field form-group row">
    E-mail:
    <div class="col">
      <%= form.text_field :email, class:"form-control", placeholder:"Ingrese su e-mail" %>
    </div> 
  </div>

  <%= form.number_field :user_id, id: :num2_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  <div class="actions">
    <%= form.submit class:"btn btn-primary"%>
  </div>

