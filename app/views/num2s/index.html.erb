<% if user_signed_in? %>
  <h2>Lista de contactos y sus datos bancarios</h2>

  <table class='table table-striped table-hover'>
    <thead class='thead-dark'>
      <tr>
        <th>Nombre completo</th>
        <th>Rut</th>
        <th>Banco</th>
        <th>Tipo de cuenta</th>
        <th>Número de cuenta</th>
        <th>E-mail</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @num2s.each do |num2| %>
        <% if num2.user == current_user%>
          <tr>
            <th><%= link_to num2.person_name, num2 %></th>
            <td><%= num2.rut %></td>
            <td><%= num2.bank %></td>
            <td><%= num2.acc_type %></td>
            <td><%= num2.acc_number %></td>
            <td><%= num2.email %></td>
            <td><%= link_to 'Editar', edit_num2_path(num2), class:"btn btn-secondary btn-sm" %></td>
            <td><%= link_to 'Eliminar', num2, class:"btn btn-danger btn-sm",  method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
          </tr>
        <% end %>    
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Nuevo contacto', new_num2_path, class:"btn btn-secondary"%>

<% else %>
  <%= render "devise/sessions/new" %>
<% end %>
